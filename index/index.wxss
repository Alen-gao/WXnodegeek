/**index.wxss**/
view, text {
  font-size: 28rpx;
  font-family: '微软雅黑';
}

.header {
  width: 100%;
  background-color: #26272b;
}

.logo {
  width: 303rpx;
  height: 110rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

/** navigation style **/
.navigation {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 15rpx;
  background: #33363b;
  z-index: 1;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,0.05), 0 -1px 0 rgba(0,0,0,0.2), inset 1px 0 0 rgba(0,0,0,0.2), inset -1px 0 0 rgba(0,0,0,0.2);
  -webkit-box-shadow: inset 0 1px 0 rgba(255,255,255,0.05), 0 -1px 0 rgba(0,0,0,0.2), inset 1px 0 0 rgba(0,0,0,0.2), inset -1px 0 0 rgba(0,0,0,0.2);
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.05), 0 -1px 0 rgba(0,0,0,0.2), inset 1px 0 0 rgba(0,0,0,0.2), inset -1px 0 0 rgba(0,0,0,0.2);
}

.nav-item {
  color: #FFF;
  padding: 0 36rpx;
}

/** title style **/
.title {
    font-size: 36rpx;
    color: #333;
    line-height: 48rpx;
    padding: 30rpx 0;
    border-bottom: 1px solid #f2f2f2;
}

.border-l {
    width: 6rpx;
    height: 48rpx;
    background-color: #6bc30d;
    float: left;
    margin-right: 20rpx;
    margin-left: 40rpx;
}

/** main style **/
.main {
  overflow: hidden;
  position: relative;
}

.share-item {
  margin-right: 0;
  padding-right: 0;
  padding: 20rpx;
  border-bottom: 40rpx solid #f0f0f0;
}


.share-img {
  width: 100%;
  height: 390rpx;
}

.share-text {
  background: #fff;
}

.share-title {
  margin-top: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx; 
}

.share-describe {
  margin-bottom: 20rpx;
}

.font48 {
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  height: 48rpx; 
}

.font26 {
  color: #999;
  font-size: 26rpx;
}

/** footer style **/
.footer {
  padding: 20rpx;
  line-height: 36rpx;
  text-align: center;
}

.font24 {
  color: #999;
  font-size: 24rpx;
}
